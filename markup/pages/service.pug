        .article__about-grid.article__about-grid--service
          .article__about-item.article__about-item--service
            .article__about-image
              img(src="assets/img/content/service/service-1.svg", alt="")
            p Упаковка для транспортування
          .article__about-item.article__about-item--service
            .article__about-image
              img(src="assets/img/content/service/service-2.svg", alt="")
            p Повна комплектація
          .article__about-item.article__about-item--service
            .article__about-image
              img(src="assets/img/content/service/service-3.svg", alt="")
